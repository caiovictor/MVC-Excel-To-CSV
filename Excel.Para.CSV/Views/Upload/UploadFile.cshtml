@{
    ViewBag.Title = "Conversão de Arquivos Excel para CSV";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <br />
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Arquivo: </label>
                @Html.TextBox("file", "", new { type = "file", @class = "btn btn-default" }) <br />
                <label>Planilhas: </label>
                <input type="radio" name="planilhas" value="todas" checked> Unir todas as planilhas
                <input type="radio" name="planilhas" value="primeira"> Apenas a 1ª Planilha <br />
                <input type="submit" class="btn btn-primary" value="Salvar" />
            </div>
            <div class="form-group">
                @if (ViewBag.File != null)
                {
                    <label>Download do CSV: </label>
                    <a href="@Url.Action("Download", "Upload", new { file = @ViewBag.File })" style="font-weight: 700;">
                        @ViewBag.File
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-@ViewBag.Status alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                @ViewBag.Message
            </div>
        </div>
    </div>
} 